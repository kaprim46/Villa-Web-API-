@model VillaNumberUpdateVM
@{
    ViewData["Title"] = "Update Villa Number";
}

<form asp-action="UpdateVillaNumber">
    <br />
    <div class="container p-3 border">
        <h1 class="text-primary text-center">Create Villa Number</h1>
        <hr />
        <input asp-for="VillaNumberUpdate.VillaNo" hidden />
        <div class="row" pb-2>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="VillaNumberUpdate.VillaNo" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNumberUpdate.VillaNo" disabled class="form-control" />
                <span asp-validation-for="VillaNumberUpdate.VillaNo" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="VillaNumberUpdate" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="@Model.VillaNumberUpdate.VillaId" asp-items="@Model.VillasList" class="form-select border-0 shadow">
                </select>
                <span asp-validation-for="@Model.VillaNumberUpdate.VillaId" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="VillaNumberUpdate.SpecialDetails" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="VillaNumberUpdate.SpecialDetails" class="form-control" rows="5"></textarea>
                <span asp-validation-for="VillaNumberUpdate.SpecialDetails" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" class="btn btn-primary form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success form-control" />
            </div>
        </div>

    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

