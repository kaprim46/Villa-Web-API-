@model VillaNumberDTO
@{
    ViewData["Title"] = "Delete Villa Number";
}

<form asp-action="DeleteVillaNumber">
    <br />
    <div class="container p-3 border">
        <h1 class="text-primary text-center">Delete Villa Number</h1>
        <hr />
        <input hidden asp-for="VillaNo" />
        <div class="row" pb-2>
            <div class="col-2">
                <label asp-for="VillaNo" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNo" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="VillaId" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Villa.Name" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="SpecialDetails" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="SpecialDetails" disabled class="form-control" rows="5"></textarea>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" class="btn btn-primary form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>

    </div>
</form>


